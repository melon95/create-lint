{
  "name": "create-lint",
  "version": "0.1.3",
  "description": "一键lint规则配置工具",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "create-lint": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "vitest",
    "commit": "cz",
    "prepare": "husky"
  },
  "keywords": [
    "lint",
    "eslint",
    "stylelint",
    "commitlint",
    "create-lint"
  ],
  "author": "melon95",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melon95/create-lint"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "commitizen": "^4.3.1",
    "conventional-commits-parser": "^6.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji-conventional": "^1.1.0",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "vitest": "^3.0.8"
  },
  "packageManager": "pnpm@8.12.1+sha1.aa961ffce9b6eaa56307d9b5ff7e984f25b7eb58",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs,json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
